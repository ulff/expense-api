{
  "name": "expense-api",
  "version": "1.0.0",
  "description": "Simple RestAPI for collecting information about daily expenses.",
  "main": "src/app.ts",
  "scripts": {
    "test": "npm run typechecks && npm run prettier && npm run unit-tests",
    "dev": "ts-node-dev --pretty --respawn ./src/app.ts",
    "typechecks": "tsc --noEmit",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "unit-tests": "jest --verbose",
    "db:migrate": "node ./bin/migrations.js",
    "db:populate": "ts-node ./bin/populate.ts"
  },
  "author": "Olaf Gałązka",
  "license": "MIT",
  "dependencies": {
    "@types/pg-pool": "^2.0.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.13.1",
    "pg-patch": "^1.3.4",
    "pg-pool": "^3.7.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
